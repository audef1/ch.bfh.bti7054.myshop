{% extends "::base.html.twig" %}

{% block title %}Page Overview{% endblock %}

{% block body %}
<h1>Page Overview</h1>
<a class="btn btn-default ws-table-add" href="{{ path('app_pages_pagenew') }}" ><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a>
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>{% trans %}Translation Of{% endtrans %}</th>
            <th></th>
        </tr>
    {% for page in pages %}
        <tr>
            <td>{{ page.pageId}}</td>
            <td>{{ page.title }}</td>
            <td>{{ page.translof }}</td>
            <td>
                <div class="btn-group pull-right" role="group" aria-label="...">
                    <a class="btn btn-default" href="{{ path('app_pages_pageedit', {'id': page.pageId}) }}" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a class="btn btn-default" href="{{ path('app_pages_pagedelete', {'id': page.pageId}) }}" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
