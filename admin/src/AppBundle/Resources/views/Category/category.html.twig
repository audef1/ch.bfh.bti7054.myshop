{% extends "::base.html.twig" %}

{% block title %}Category Overview{% endblock %}

{% block body %}
<h1>Category Overview</h1>


    <a class="btn btn-default ws-table-add" href="{{ path('app_category_categorynew') }}" ><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a>
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>{% trans %}Name{% endtrans %}</th>
            <th>{% trans %}Desciption{% endtrans %}</th>
            <th></th>
        </tr>
    {% for category in categories %}
        <tr>
            <td>{{ category.categoryId}}</td>
            <td>{{ category.categoryName }}</td>
            <td>{{ category.categoryDescription }}</td>
            <td>
                <div class="btn-group pull-right" role="group" aria-label="...">
                    <a class="btn btn-default" href="{{ path('app_category_categoryedit', {'id': category.categoryId}) }}" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a class="btn btn-default" href="{{ path('app_category_categorydelete', {'id': category.categoryId}) }}" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
