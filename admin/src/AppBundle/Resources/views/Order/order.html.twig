{% extends "::base.html.twig" %}

{% block title %}AppBundle:Order:Order{% endblock %}

{% block body %}
<h1>Welcome to the Order:Order page</h1>
<a class="btn btn-default ws-table-add" href="{{ path('app_order_ordernew') }}" role="button"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span></a>
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>{% trans %}Customer{% endtrans %}</th>
            <th>{% trans %}Date{% endtrans %}</th>
            <th></th>
        </tr>
    {% for order in orders %}
        <tr>
            <td>{{ order.orderId}}</td>
            <td>{{ order.customerId }}</td>
            <td>{{ order.orderDate|date('Y-m-d H:i') }}</td>
            <td>
                <div class="btn-group pull-right" role="group" aria-label="...">
                    <a class="btn btn-default" href="{{ path('app_order_orderedit', {'id': order.orderId}) }}" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a class="btn btn-default" href="{{ path('app_order_orderdelete', {'id': order.orderId}) }}" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
